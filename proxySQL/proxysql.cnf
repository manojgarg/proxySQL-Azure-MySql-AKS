datadir="/var/lib/proxysql"
admin_variables=
{
        admin_credentials="dradmin:dradmin"
        mysql_ifaces="0.0.0.0:6032"
}
mysql_variables=
{
        threads=4
        max_connections=2048
        default_query_delay=0
        default_query_timeout=36000000
        have_compress=true
        poll_timeout=2000
        interfaces="0.0.0.0:3306;/tmp/proxysql.sock"
        default_schema="information_schema"
        stacksize=1048576
        server_version="8"
        connect_timeout_server=10000
        monitor_history=60000
        monitor_connect_interval=200000
        monitor_ping_interval=200000
        ping_interval_server_msec=10000
        ping_timeout_server=200
        commands_stats=true
        sessions_sort=true
        monitor_username="proxysql"
        monitor_password="proxysqlsecretpassword"
}
mysql_servers =
(
        { hostgroup_id=1, hostname="mastermysql.mysql.database.azure.com", port=3306 , weight=1, comment="write Group", use_ssl=1 },
        { hostgroup_id=2, hostname="replicadrmysql.mysql.database.azure.com", port=3306 , weight=1, comment="Read Group", use_ssl=1  }
)
mysql_users =
(
        { username = "mydemouser" , password = "secretpassword" , default_hostgroup = 1 , active = 1 }
)
mysql_query_rules =
(
        {
                rule_id=1
                active=1
                match_digest="^SELECT .* FOR UPDATE"
                destination_hostgroup=1
                apply=1
        },
        {
                rule_id=2
                active=1
                match_digest="^SELECT .*"
                destination_hostgroup=2
                apply=1
        },
)